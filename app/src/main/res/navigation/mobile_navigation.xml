<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_currencies">

    <fragment
        android:id="@+id/navigation_currencies"
        android:name="com.givekesh.raters.ui.fragments.CurrenciesFragment"
        android:label="@string/title_currencies"
        tools:layout="@layout/fragment_layout">
        <action
            android:id="@+id/action_currencies_to_coins"
            app:destination="@id/navigation_coins"
            app:enterAnim="@anim/fragment_open_enter"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/fragment_open_enter" />
    </fragment>

    <fragment
        android:id="@+id/navigation_coins"
        android:name="com.givekesh.raters.ui.fragments.CoinsFragment"
        android:label="@string/title_coins"
        tools:layout="@layout/fragment_layout">
        <action
            android:id="@+id/action_coins_to_currencies"
            app:destination="@id/navigation_currencies"
            app:exitAnim="@anim/fragment_open_exit"
            app:launchSingleTop="true"
            app:popExitAnim="@anim/fragment_open_exit" />
    </fragment>
</navigation>